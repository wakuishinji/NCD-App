<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect to HTTPS" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" />
                </rule>
                <!-- API calls: redirect to Cloudflare Workers (preserve method with 307) -->
                <rule name="Redirect API v1 to Workers" stopProcessing="true">
                    <match url="^api/v1/(.*)$" />
                    <action type="Redirect" url="https://ncd-app.altry.workers.dev/api/v1/{R:1}" statusCode="307" />
                </rule>
                <rule name="Redirect API to Workers" stopProcessing="true">
                    <match url="^api/(.*)$" />
                    <action type="Redirect" url="https://ncd-app.altry.workers.dev/api/{R:1}" statusCode="307" />
                </rule>
                <rule name="ReverseProxyInboundRule1" stopProcessing="true">
                    <match url="^github-webhook$" />
                    <action type="Rewrite" url="http://localhost:3000/github-webhook" />
                </rule>
            </rules>
        </rewrite>
        <httpProtocol>
            <customHeaders>
                <add name="Content-Type" value="text/html; charset=utf-8" />
            </customHeaders>
        </httpProtocol>
        <staticContent>
            <remove fileExtension=".css" />
            <remove fileExtension=".js" />
            <mimeMap fileExtension=".js" mimeType="application/javascript; charset=utf-8" />
            <mimeMap fileExtension=".css" mimeType="text/css; charset=utf-8" />
        </staticContent>
    </system.webServer>
</configuration>
